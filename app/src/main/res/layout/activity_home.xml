<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <!-- 상단 바 -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/top_navigation_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="@color/white"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/btn_shop"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_shop"
                    android:src="@drawable/ic_shop"
                    android:text="TO-DO"
                    android:scaleType="centerInside" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/black" />

                <ImageButton
                    android:id="@+id/btn_profile"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_profile"
                    android:src="@drawable/ic_profile"
                    android:text="Home"
                    android:scaleType="centerInside" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/black" />

                <ImageButton
                    android:id="@+id/btn_drawingbook"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_drawbook"
                    android:src="@drawable/ic_drawbook"
                    android:scaleType="centerInside" />

            </LinearLayout>

        </FrameLayout>

        <!-- 중단 화면 ~ 하단 바 까지 -->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background" >

            <!-- 화면 중단 -->

            <LinearLayout
                android:layout_marginTop="70dp"
                android:layout_width="220dp"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:layout_gravity="center" >

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="30dp"
                    android:background="#C7E8F1"
                    android:text="G.2"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="220dp"
                    android:layout_height="240dp"
                    android:src="@drawable/ic_chang"/>

                <TextView
                    android:layout_width="220dp"
                    android:layout_height="30dp"
                    android:text="창창이"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#ffffff"
                    android:background="#73414A"
                    android:textSize="20sp" />

            </LinearLayout>

            <com.google.android.material.bottomsheet.BottomSheetDragHandleView
                android:id="@+id/bottomSheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorSurface"
                android:elevation="4dp"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="5"
                        android:rowCount="9"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="0dp"
                            android:height="50dp"
                            android:layout_columnWeight="1"
                            android:text="버튼 1"/>

                        <Button
                            android:layout_width="0dp"
                            android:height="50dp"
                            android:layout_columnWeight="1"
                            android:text="버튼 2"/>

                        <Button
                            android:layout_width="0dp"
                            android:height="50dp"
                            android:layout_columnWeight="1"
                            android:text="버튼 3"/>

                        <Button
                            android:layout_width="0dp"
                            android:height="50dp"
                            android:layout_columnWeight="1"
                            android:text="버튼 4"/>

                        <Button
                            android:layout_width="0dp"
                            android:height="50dp"
                            android:layout_columnWeight="1"
                            android:text="버튼 5"/>
                    </GridLayout>
                </LinearLayout>
            </com.google.android.material.bottomsheet.BottomSheetDragHandleView>
        </FrameLayout>


    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>