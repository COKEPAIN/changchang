<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 상단 바 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/top_navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/btn_shop"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_shop"
                android:src="@drawable/ic_shop"
                android:text="TO-DO"
                android:scaleType="centerInside" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <ImageButton
                android:id="@+id/btn_profile"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_profile"
                android:src="@drawable/ic_profile"
                android:text="Home"
                android:scaleType="centerInside" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black" />

            <ImageButton
                android:id="@+id/btn_drawingbook"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_drawbook"
                android:src="@drawable/ic_drawbook"
                android:scaleType="centerInside" />

        </LinearLayout>
    </FrameLayout>

    <!-- 중단 화면 ~ 하단 바 까지 -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background" >

        <!-- 화면 중단 -->

        <LinearLayout
            android:layout_marginTop="70dp"
            android:layout_width="220dp"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:layout_gravity="center" >

            <TextView
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:background="#C7E8F1"
                android:text="G.2"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="220dp"
                android:layout_height="240dp"
                android:src="@drawable/ic_chang"/>

            <TextView
                android:layout_width="220dp"
                android:layout_height="30dp"
                android:text="창창이"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:background="#73414A"
                android:textSize="20sp" />

        </LinearLayout>




        <!-- 화면 하단 바 -->

        <LinearLayout
            android:id="@+id/bottom_navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/white"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:gravity="bottom">

        <ImageButton
            android:id="@+id/btn_todo"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_todo"
            android:src="@drawable/ic_todo"
            android:text="TO-DO"
            android:scaleType="centerInside" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <ImageButton
            android:id="@+id/btn_home"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_home"
            android:src="@drawable/ic_home"
            android:text="Home"
            android:scaleType="centerInside" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <ImageButton
            android:id="@+id/btn_map"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_map"
            android:src="@drawable/ic_map"
            android:text="Map"
            android:scaleType="centerInside" />

        </LinearLayout>

    </FrameLayout>


</LinearLayout>