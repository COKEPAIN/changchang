<?xml version="1.0" encoding="utf-8"?> <!-- 승민 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/IVORY">

    <!-- 상단바 -->
    <LinearLayout
        android:id="@+id/top_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="top"
        android:background="@drawable/rounded_nav"
        android:orientation="horizontal"
        android:layout_margin="12dp"
        android:elevation="4dp"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/btn_shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:src="@drawable/ic_shop"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:src="@drawable/ic_profile"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageButton
            android:id="@+id/btn_drawingbook"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:src="@drawable/ic_drawbook"
            android:scaleType="centerInside"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <!-- 중단 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Profile"
                android:textSize="25sp"/>

            <!-- 아이콘 및 변경 불가 기본 사항 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/profile_image"
                    android:src="@drawable/changchang6"
                    android:layout_gravity="end"
                    android:background="@color/cool"
                    android:layout_marginRight="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/point"
                        android:text="Point : "
                        android:textSize="20sp"
                        android:layout_marginBottom="5dp"
                        android:textStyle="bold"/>

                    <!-- 학년 표시 -->
                    <TextView
                        android:id="@+id/grade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="Grade : "
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <!-- 학번 표시 -->
                    <TextView
                        android:id="@+id/studno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Student no :"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                </LinearLayout>
            </LinearLayout>

            <!-- 상태 바 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!-- 스트레스 지수 표시 -->
                    <TextView
                        android:id="@+id/stress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Stress"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <!-- 행복도 표시 -->
                    <TextView
                        android:id="@+id/happiness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Happiness"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <!-- 집중력 표시 -->
                    <TextView
                        android:id="@+id/focus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Focus"
                        android:textSize="20sp"
                        android:textStyle="bold"/>

                    <!-- 학업 능력 표시 -->
                    <TextView
                        android:id="@+id/academicAbility"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Ability"
                        android:textSize="20sp"
                        android:textStyle="bold"/>
                </LinearLayout>


                <View
                    android:layout_width="1dp"
                    android:layout_height="150dp"
                    android:background="@color/black"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <!-- 상태 바 섹션 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <!-- 스트레스 지수 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="5dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:background="#E0E0E0">


                                    <View
                                        android:id="@+id/stress_bar"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:background="#FF5722"/>


                                    <!-- 눈금 텍스트 -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="20dp">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="25"
                                            android:text="0"
                                            android:textSize="10sp"
                                            android:gravity="start"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="25"
                                            android:text="25"
                                            android:textSize="10sp"
                                            android:gravity="center"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="25"
                                            android:text="50"
                                            android:textSize="10sp"
                                            android:gravity="center"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="25"
                                            android:text="75"
                                            android:textSize="10sp"
                                            android:gravity="end"/>
                                    </LinearLayout>
                                </FrameLayout>
                            </LinearLayout>

                            <!-- 행복도 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="20dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:background="#E0E0E0">

                                    <View
                                        android:id="@+id/happiness_bar"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:background="#4CAF50"/>

                                    <!-- 눈금 텍스트 -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="20dp">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="25"
                                            android:text="0"
                                            android:textSize="10sp"
                                            android:gravity="start"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="25"
                                            android:text="25"
                                            android:textSize="10sp"
                                            android:gravity="center"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="25"
                                            android:text="50"
                                            android:textSize="10sp"
                                            android:gravity="center"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="25"
                                            android:text="75"
                                            android:textSize="10sp"
                                            android:gravity="end"/>
                                    </LinearLayout>
                                </FrameLayout>
                            </LinearLayout>

                            <!-- 집중력 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="18dp">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:background="#E0E0E0">

                                    <View
                                        android:id="@+id/focus_bar"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:background="#2196F3"/>

                                    <!-- 눈금 텍스트 -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="20dp">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="25"
                                            android:text="0"
                                            android:textSize="10sp"
                                            android:gravity="start"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="25"
                                            android:text="25"
                                            android:textSize="10sp"
                                            android:gravity="center"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="25"
                                            android:text="50"
                                            android:textSize="10sp"
                                            android:gravity="center"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="25"
                                            android:text="75"
                                            android:textSize="10sp"
                                            android:gravity="end"/>
                                    </LinearLayout>
                                </FrameLayout>
                            </LinearLayout>

                            <!-- 학업 능력 -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="8dp">


                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="20dp"
                                    android:background="#E0E0E0">

                                    <View
                                        android:id="@+id/academic_bar"
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:background="#9C27B0"/>

                                    <!-- 눈금 텍스트 -->
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:layout_marginTop="20dp">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="0.0"
                                            android:textSize="8sp"
                                            android:gravity="center"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="0.5"
                                            android:textSize="8sp"
                                            android:gravity="center"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="1.0"
                                            android:textSize="8sp"
                                            android:gravity="center"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="1.5"
                                            android:textSize="8sp"
                                            android:gravity="center"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="2.0"
                                            android:textSize="8sp"
                                            android:gravity="center"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="2.5"
                                            android:textSize="8sp"
                                            android:gravity="center"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="3.0"
                                            android:textSize="8sp"
                                            android:gravity="center"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="3.5"
                                            android:textSize="8sp"
                                            android:gravity="center"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="4.0"
                                            android:textSize="8sp"
                                            android:gravity="center"/>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="4.5"
                                            android:textSize="8sp"
                                            android:gravity="center"
                                            android:layout_marginTop="3dp"/>
                                    </LinearLayout>
                                </FrameLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="70dp"
                            android:background="#80000000"/>

                        <View
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="140dp"
                            android:background="#80000000"/>

                        <View
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="210dp"
                            android:background="#80000000"/>

                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>






        <!-- 화면 하단 바 -->

        <LinearLayout
            android:id="@+id/bottom_navigation_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="bottom"
            android:layout_margin="12dp"
            android:background="@drawable/rounded_nav"
            android:elevation="4dp"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/btn_todo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:src="@drawable/ic_todo"
                android:scaleType="centerInside"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <ImageButton
                android:id="@+id/btn_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:src="@drawable/ic_home"
                android:scaleType="centerInside"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <ImageButton
                android:id="@+id/btn_map"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:src="@drawable/ic_map"
                android:scaleType="centerInside"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>