<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/IVORY">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="user : "
        android:textStyle="bold|italic"
        android:textSize="50sp"
        android:id="@+id/administer"
        android:background="@color/cija"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1" >


                <!-- 출석버튼 -->
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_style_1"
                    android:layout_weight="1"
                    android:text="창대생"
                    android:textStyle="bold"
                    android:backgroundTint="#03EF6F"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/user_style_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="과대"
                    android:textStyle="bold"
                    android:backgroundTint="#298E51"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1" >


                <!-- 출석버튼 -->
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_style_3"
                    android:layout_weight="1"
                    android:text="휴학생"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:backgroundTint="#C76F38"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/user_style_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="졸업생"
                    android:backgroundTint="#E9CDBE"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1" >


                <!-- 출석버튼 -->
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_style_5"
                    android:layout_weight="1"
                    android:text="부학회장"
                    android:textStyle="bold"
                    android:backgroundTint="#FFAF83"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/user_style_6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="비둘기"
                    android:backgroundTint="#FF00D3"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1" >


                <!-- 출석버튼 -->
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_style_7"
                    android:layout_weight="1"
                    android:text="동아리회장"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:backgroundTint="#CDDC39"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/user_style_8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CASPER 회장"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:backgroundTint="#FF9800"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1" >


                <!-- 출석버튼 -->
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_style_9"
                    android:layout_weight="1"
                    android:text="복학생"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:backgroundTint="#F15227DE"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/user_style_10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="과탑"
                    android:textStyle="bold"
                    android:textSize="20sp"

                    android:backgroundTint="#BF0FEB"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1" >


                <!-- 출석버튼 -->
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_style_11"
                    android:layout_weight="1"
                    android:text="컴공 1과대"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:backgroundTint="#EB620F"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/user_style_12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="컴공 2과대"
                    android:textStyle="bold"
                    android:textSize="20sp"

                    android:backgroundTint="#EB620F"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1" >


                <!-- 출석버튼 -->
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/user_style_13"
                    android:layout_weight="1"
                    android:text="컴공 3과대"
                    android:textStyle="bold"
                    android:textSize="20sp"

                    android:backgroundTint="#EB620F"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/user_style_14"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="컴공 4과대"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:backgroundTint="#EB620F"
                    android:textColor="@color/black"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>